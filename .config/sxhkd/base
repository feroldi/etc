
XF86Audio{Prev,Next}
    mpc -q {prev,next}

XF86Audio{Raise,Lower}Volume
    sh ~/.volume_control {5%+,5%-}

XF86AudioPlay
    sh ~/.mpc-play-pause

super + Print
    scrotup

Print
    scrot -e 'mv $f ~/images/screenshots/'

super + d
    dmenu_run

super + Return
    urxvt

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

